<!-- movieInfo.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.title %></title>
    <link rel="stylesheet" href="/css/movieInfo.css">
</head>
<body>
    <%- include('partials/header', { activePage: 'movieInfo' }) %>

    <div class="container">
        <h1><%= movie.title %></h1>
        <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" alt="<%= movie.title %> Poster" class="movie-poster">
        <p><strong>Release Date:</strong> <%= new Date(movie.release_date).toDateString() %></p>
        <p><strong>Overview:</strong> <%= movie.overview %></p>
        
        <form action="/movies/<%= movie.tmdb_id %>/review" method="POST">
            <textarea name="review" placeholder="Write your review here..."></textarea>
            <button type="submit" class="btn">Submit Review</button>
        </form>

        <button onclick="window.history.back()" class="btn btn-secondary">Go Back</button>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
